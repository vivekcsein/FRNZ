// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE        @map(name: "male")
  FEMALE      @map(name: "female")
  OTHER       @map(name: "other")
  UNSPECIFIED @map(name: "Unspecified")
  NON_BINARY  @map(name: "non-binary")
}

enum UserRole {
  ADMIN     @map(name: "admin")
  MODERATOR @map(name: "moderator")
  USER      @map(name: "user")
  DEFAULT   @map(name: "default")
}

model User {
  userID    String   @id @default(uuid())
  email     String   @unique
  profile   Profile?
  Post      Post?
  Comment   Comment?
  createdAt DateTime @default(now())
  updateUt  DateTime @updatedAt
}

model Profile {
  id        String    @id @default(uuid())
  username  String    @unique
  fullname  String
  gender    Gender    @default(UNSPECIFIED)
  age       Int?
  password  String
  roles     Role[]
  Post      Post[]
  Comment   Comment[]
  User      User      @relation(fields: [profileID], references: [userID])
  profileID String    @unique
  createdAt DateTime  @default(now())
  updateUt  DateTime  @updatedAt
}

model Role {
  id        String   @id @default(uuid())
  rolename  String?
  Roles     UserRole @default(DEFAULT)
  Profile   Profile? @relation(fields: [roleID], references: [profileID])
  roleID    String
  createdAt DateTime @default(now())
  updateUt  DateTime @updatedAt
}

model Post {
  postID        String    @id @default(uuid())
  title         String
  content       String?
  publishedDate DateTime  @default(now())
  updateUt      DateTime  @updatedAt
  authorUser    User      @relation(fields: [authorUserID], references: [userID])
  authorUserID  String    @unique
  viewsCount    Int       @default(0)
  likesCount    Int       @default(0)
  rating        Float
  comments      Comment[]
  tags          Tag[]
  Profile       Profile?  @relation(fields: [profileId], references: [id])
  profileId     String?
}

model Comment {
  commentID    String   @id @default(uuid())
  text         String
  postedDate   DateTime @default(now())
  authorUser   User     @relation(fields: [authorUserID], references: [userID])
  authorUserID String   @unique
  post         Post     @relation(fields: [postID], references: [postID])
  postID       String
  Profile      Profile? @relation(fields: [profileId], references: [id])
  profileId    String?
}

model Tag {
  tagID String @id @default(uuid())
  name  String @unique
  posts Post[]
}
